-- Function to get the sword name from the player's backpack
local function getSwordName()
    local itemsFolder = ReplicatedStorage:FindFirstChild("Items")
    local swords = {}

    if itemsFolder then
        for _, item in ipairs(itemsFolder:GetChildren()) do
            table.insert(swords, item.Name)
        end

        for _, swordName in ipairs(swords) do
            if Players.LocalPlayer.Backpack:FindFirstChild(swordName) then
                return swordName
            end
        end
    end
end

-- Kill Aura Function
local function enableKillAura()
    while true do
        wait(0.1)
        if killAuraButton.BackgroundTransparency == 0 then
            local closestPlayer = nil
            local shortestDistance = 18 -- Updated distance

            for _, player in pairs(Players:GetPlayers()) do
                if player ~= Players.LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    local distance = (player.Character.HumanoidRootPart.Position - Players.LocalPlayer.Character.HumanoidRootPart.Position).magnitude
                    if distance < shortestDistance then
                        closestPlayer = player.Character
                        shortestDistance = distance
                    end
                end
            end

            if closestPlayer then
                local swordName = getSwordName()
                if swordName then
                    local args = {
                        [1] = closestPlayer,
                        [2] = swordName
                    }
                    ReplicatedStorage.Remotes.SwordAttack:FireServer(unpack(args))
                end
            end
        end
    end
end

killAuraButton.MouseButton1Click:Connect(function()
    if killAuraButton.BackgroundTransparency == 0 then
        killAuraButton.BackgroundTransparency = 1
        -- Stop the Kill Aura loop
        RunService:UnbindFromRenderStep("KillAura")
    else
        killAuraButton.BackgroundTransparency = 0
        -- Start the Kill Aura loop
        RunService:BindToRenderStep("KillAura", 0, enableKillAura)
    end
end)

-- Fly Function
local isFlying = false

flyButton.MouseButton1Click:Connect(function()
    if not isFlying then
        isFlying = true
        game.Workspace.Gravity = 0
        flyButton.BackgroundTransparency = 0.5
    else
        isFlying = false
        game.Workspace.Gravity = 196.2
        flyButton.BackgroundTransparency = 1
    end
end)

-- Tab Switching
local function switchTab(tabName)
    collectFrame.Visible = (tabName == "Collect")
    blatantFrame.Visible = (tabName == "Blatant")
end

collectButton.MouseButton1Click:Connect(function()
    switchTab("Collect")
end)

blatantButton.MouseButton1Click:Connect(function()
    switchTab("Blatant")
end)

-- X Button to Close Main Frame
xButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleVisibilityButton.Visible = true
end)

-- Toggle Visibility Button
toggleVisibilityButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    toggleVisibilityButton.Visible = false
end)

-- Clean up
game.Players.LocalPlayer.Anticheat:Destroy()
game.StarterPlayer.StarterPlayerScripts.Anticheat:Destroy()
